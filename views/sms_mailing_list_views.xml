<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_mailing_list_list" model="ir.ui.view">
            <field name="name">sms.mailing.list.list</field>
            <field name="model">sms.mailing_list</field>
            <field name="arch" type="xml">
                <list string="SMS Mailing Lists" decoration-muted="not active">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="list_type"/>
                    <field name="contact_count"/>
                    <field name="opted_in_count"/>
                    <field name="blacklisted_count"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <record id="view_sms_mailing_list_form" model="ir.ui.view">
            <field name="name">sms.mailing.list.form</field>
            <field name="model">sms.mailing_list</field>
            <field name="arch" type="xml">
                <form string="SMS Mailing List">
                    <header>
                        <button name="action_import_contacts" string="Import Contacts" type="object" class="btn-primary" invisible="not import_file"/>
                        <button name="action_add_all_students" string="Add All Students" type="object" class="btn-secondary"/>
                        <button name="action_add_department" string="Add Department Contacts" type="object" class="btn-secondary" invisible="not department_id"/>
                        <button name="action_remove_blacklisted" string="Remove Blacklisted" type="object" class="btn-warning"/>
                        <button name="action_remove_opted_out" string="Remove Opted Out" type="object" class="btn-warning"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                            <button name="%(action_sms_contact)d" type="action" class="oe_stat_button" icon="fa-users" context="{'search_default_mailing_list_ids': id}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="contact_count"/></span>
                                    <span class="o_stat_text">Contacts</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1><field name="name" placeholder="e.g., Computer Science Students Y1" required="1"/></h1>
                        </div>
                        
                        <group>
                            <group string="List Information">
                                <field name="code" placeholder="e.g., CS-Y1"/>
                                <field name="list_type"/>
                                <field name="department_id"/>
                                <field name="club_id"/>
                            </group>
                            <group string="Import Statistics">
                                <field name="last_import_date" readonly="1"/>
                                <field name="last_import_count" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="What is this mailing list for?"/>
                            </page>
                            <page string="Contacts">
                                <field name="contact_ids">
                                    <list decoration-danger="blacklisted" decoration-warning="not opt_in">
                                        <field name="name"/>
                                        <field name="mobile"/>
                                        <field name="contact_type"/>
                                        <field name="student_id"/>
                                        <field name="department_id"/>
                                        <field name="opt_in" widget="boolean_toggle"/>
                                        <field name="blacklisted" invisible="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Import Contacts">
                                <group>
                                    <group string="Upload File">
                                        <field name="import_filename" invisible="1"/>
                                        <field name="import_file" filename="import_filename"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sms_mailing_list_search" model="ir.ui.view">
            <field name="name">sms.mailing.list.search</field>
            <field name="model">sms.mailing_list</field>
            <field name="arch" type="xml">
                <search string="Search Mailing Lists">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="department_id"/>
                    <field name="club_id"/>
                    <filter string="Students" name="students" domain="[('list_type', '=', 'students')]"/>
                    <filter string="Staff" name="staff" domain="[('list_type', '=', 'staff')]"/>
                    <filter string="Club Members" name="clubs" domain="[('list_type', '=', 'club')]"/>
                    <filter string="Department" name="department" domain="[('list_type', '=', 'department')]"/>
                    <filter string="Custom" name="custom" domain="[('list_type', '=', 'custom')]"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="List Type" name="group_list_type" context="{'group_by': 'list_type'}"/>
                        <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Club" name="group_club" context="{'group_by': 'club_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_sms_mailing_list" model="ir.actions.act_window">
            <field name="name">Mailing Lists</field>
            <field name="res_model">sms.mailing_list</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create your first Mailing List</p>
                <p>Organize contacts into groups for targeted SMS campaigns.</p>
            </field>
        </record>

        <menuitem id="menu_sms_mailing_lists" name="Mailing Lists" parent="menu_sms_main" action="action_sms_mailing_list" sequence="30"/>
    </data>
</odoo>