<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sms_campaign_list" model="ir.ui.view">
            <field name="name">sms.campaign.list</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <list string="SMS Campaigns" decoration-success="state=='completed'" decoration-info="state=='draft'" decoration-warning="state=='in_progress'">
                    <field name="name"/>
                    <field name="schedule_date"/>
                    <field name="state"/>
                    <field name="total_recipients"/>
                    <field name="sent_count"/>
                    <field name="failed_count"/>
                    <field name="gateway_id"/>
                </list>
            </field>
        </record>

        <record id="view_sms_campaign_form" model="ir.ui.view">
            <field name="name">sms.campaign.form</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <form string="SMS Campaign">
                    <header>
                        <button name="action_send" string="Send Now" type="object" class="oe_highlight" 
                                invisible="state != 'draft'"/>
                        <button name="action_schedule" string="Schedule" type="object" class="oe_highlight" 
                                invisible="state != 'draft'"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="state not in ['draft', 'scheduled']"/>
                        <field name="state" widget="statebar" statebar_visible="draft,scheduled,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Campaign Name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="gateway_id" required="1" options="{'no_create': True}"/>
                                <field name="schedule_date"/>
                            </group>
                            <group>
                                <field name="total_recipients" readonly="1"/>
                                <field name="sent_count" readonly="1"/>
                                <field name="failed_count" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Message">
                                <group>
                                    <field name="message" widget="text" placeholder="Enter your SMS message here..." required="1"/>
                                    <field name="message_length" readonly="1"/>
                                </group>
                            </page>
                            <page string="Recipients">
                                <field name="recipient_ids">
                                    <list string="Recipients" editable="bottom" decoration-success="state=='sent'" decoration-danger="state=='failed'">
                                        <field name="name"/>
                                        <field name="phone_number"/>
                                        <field name="state"/>
                                        <field name="sent_date"/>
                                        <field name="error_message"/>
                                    </list>
                                </field>
                                <group>
                                    <button name="%(action_import_sms_recipients)d" string="Import Recipients" type="action" class="oe_highlight"/>
                                </group>
                            </page>
                            <page string="Statistics">
                                <group>
                                    <group>
                                        <field name="sent_count" readonly="1"/>
                                        <field name="failed_count" readonly="1"/>
                                        <field name="pending_count" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="success_rate" readonly="1" widget="percentage"/>
                                        <field name="total_recipients" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_sms_campaign_search" model="ir.ui.view">
            <field name="name">sms.campaign.search</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <search string="Search SMS Campaigns">
                    <field name="name"/>
                    <field name="gateway_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Scheduled Date" name="schedule_date" date="schedule_date"/>
                    <group expand="0" string="Group By">
                        <filter string="state" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Gateway" name="group_gateway" context="{'group_by': 'gateway_id'}"/>
                        <filter string="Schedule Date" name="group_schedule_date" context="{'group_by': 'schedule_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_sms_campaign_kanban" model="ir.ui.view">
            <field name="name">sms.campaign.kanban</field>
            <field name="model">sms.campaign</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="schedule_date"/>
                    <field name="total_recipients"/>
                    <field name="sent_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <span class="badge badge-pill">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="schedule_date"/>
                                    <br/>
                                    Recipients: <field name="total_recipients"/> | Sent: <field name="sent_count"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_sms_campaign" model="ir.actions.act_window">
            <field name="name">SMS Campaigns</field>
            <field name="res_model">sms.campaign</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first SMS Campaign
                </p>
                <p>
                    Design and send SMS campaigns to your customers.
                </p>
            </field>
        </record>

        <menuitem id="menu_sms_campaigns"
                  name="SMS Campaigns"
                  parent="menu_sms_marketing_campaigns"
                  action="action_sms_campaign"
                  sequence="10"/>
    </data>
</odoo>