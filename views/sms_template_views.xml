<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SMS Template list View -->
        <record id="view_sms_template_list" model="ir.ui.view">
            <field name="name">sms.template.list</field>
            <field name="model">sms.template</field>
            <field name="arch" type="xml">
                <list string="SMS Templates">
                    <field name="name"/>
                    <field name="template_type"/>
                    <field name="model_id"/>
                    <field name="char_count"/>
                    <field name="sms_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- SMS Template Form View -->
        <record id="view_sms_template_form" model="ir.ui.view">
            <field name="name">sms.template.form</field>
            <field name="model">sms.template</field>
            <field name="arch" type="xml">
                <form string="SMS Template">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        
                        <group>
                            <group>
                                <field name="name" placeholder="e.g., Appointment Reminder"/>
                                <field name="template_type"/>
                                <field name="model_id"/>
                                <field name="model" invisible="1"/>
                            </group>
                            <group>
                                <field name="char_count" readonly="1"/>
                                <field name="sms_count" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Message Body">
                            <field name="body" widget="text" 
                                   placeholder="Example: Hi ${object.name}, your appointment is on ${object.date}"/>
                        </group>
                        
                        <group string="Help - Common Variables">
                            <div class="text-muted">
                                <p><strong>Student Information:</strong></p>
                                <ul>
                                    <li>${object.name} - Student name</li>
                                    <li>${object.ref} - Student ID</li>
                                    <li>${object.email} - Email address</li>
                                    <li>${object.mobile} - Mobile number</li>
                                </ul>
                                <p><strong>Academic Fields:</strong></p>
                                <ul>
                                    <li>${object.course_name} - Course name</li>
                                    <li>${object.semester} - Current semester</li>
                                    <li>${object.program.name} - Program</li>
                                    <li>${object.department.name} - Department</li>
                                </ul>
                                <p><strong>Dates &amp; Events:</strong></p>
                                <ul>
                                    <li>${object.exam_date} - Exam date</li>
                                    <li>${object.start} - Start time</li>
                                    <li>${object.stop} - End time</li>
                                    <li>${object.due_date} - Due date</li>
                                    <li>${object.location} - Venue/Location</li>
                                </ul>
                                <p><strong>Financial:</strong></p>
                                <ul>
                                    <li>${object.amount_residual} - Balance</li>
                                    <li>${object.invoice_date_due} - Payment due date</li>
                                </ul>
                                <p><strong>SMS Length:</strong></p>
                                <ul>
                                    <li>1 SMS = up to 160 characters</li>
                                    <li>Longer messages = 153 chars per SMS part</li>
                                </ul>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- SMS Template Search View -->
        <record id="view_sms_template_search" model="ir.ui.view">
            <field name="name">sms.template.search</field>
            <field name="model">sms.template</field>
            <field name="arch" type="xml">
                <search string="SMS Templates">
                    <field name="name"/>
                    <field name="template_type"/>
                    <field name="model_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Birthday" name="birthday" domain="[('template_type', '=', 'birthday')]"/>
                    <filter string="Appointment" name="appointment" domain="[('template_type', '=', 'appointment')]"/>
                    <filter string="Payment" name="payment" domain="[('template_type', '=', 'payment')]"/>
                    <filter string="Welcome" name="welcome" domain="[('template_type', '=', 'welcome')]"/>
                    <filter string="Follow-up" name="followup" domain="[('template_type', '=', 'followup')]"/>
                    <filter string="Promotion" name="promotion" domain="[('template_type', '=', 'promotion')]"/>
                    <filter string="Custom" name="custom" domain="[('template_type', '=', 'custom')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Template Type" name="group_type" context="{'group_by': 'template_type'}"/>
                        <filter string="Model" name="group_model" context="{'group_by': 'model_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- SMS Template Action -->
        <record id="action_sms_template" model="ir.actions.act_window">
            <field name="name">SMS Templates</field>
            <field name="res_model">sms.template</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first SMS Template
                </p>
                <p>
                    SMS templates allow you to send consistent messages with dynamic content.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_sms_template"
                  name="SMS Templates"
                  parent="menu_sms_main"
                  action="action_sms_template"
                  sequence="10"/>
    </data>
</odoo>