<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- list View -->
        <record id="view_sms_recipient_list" model="ir.ui.view">
            <field name="name">sms.recipient.list</field>
            <field name="model">sms.recipient</field>
            <field name="arch" type="xml">
                <list string="SMS Recipients" decoration-success="state=='sent'" decoration-danger="state=='failed'" decoration-muted="state=='pending'">
                    <field name="campaign_id"/>
                    <field name="name"/>
                    <field name="phone_number"/>
                    <field name="state"/>
                    <field name="sent_date"/>
                    <field name="error_message"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_sms_recipient_form" model="ir.ui.view">
            <field name="name">sms.recipient.form</field>
            <field name="model">sms.recipient</field>
            <field name="arch" type="xml">
                <form string="SMS Recipient">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="pending,sent,failed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="campaign_id" readonly="1"/>
                                <field name="name"/>
                                <field name="phone_number"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="sent_date" readonly="1"/>
                                <field name="error_message" readonly="1" invisible="state != 'failed'"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_sms_recipient_search" model="ir.ui.view">
            <field name="name">sms.recipient.search</field>
            <field name="model">sms.recipient</field>
            <field name="arch" type="xml">
                <search string="Search Recipients">
                    <field name="name"/>
                    <field name="phone_number"/>
                    <field name="campaign_id"/>
                    <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                    <separator/>
                    <filter string="Sent Date" name="sent_date" date="sent_date"/>
                    <group expand="0" string="Group By">
                        <filter string="Campaign" name="group_campaign" context="{'group_by': 'campaign_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Sent Date" name="group_sent_date" context="{'group_by': 'sent_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_sms_recipient" model="ir.actions.act_window">
            <field name="name">SMS Recipients</field>
            <field name="res_model">sms.recipient</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No recipients found
                </p>
                <p>
                    Recipients are added through campaigns.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_sms_recipients"
                  name="Recipients"
                  parent="menu_sms_marketing_campaigns"
                  action="action_sms_recipient"
                  sequence="20"/>
    </data>
</odoo>